<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="document.getElementById('tutorialVideoPlayer').pause();">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="modal-video">
            <div class="embed-responsive embed-responsive-16by9">
                <video id="tutorialVideoPlayer" controls controlsList="nodownload" src="@ViewBag.VideoTutorialUrl" autoplay>
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>
</div>