@using Localization.Web
@using Web.Business
@model Model.DatabaseContext.Log

<div class="box">
    <div class="box-header">
        <div class="box-title"><button class='btn btn-rounded btn-danger table-delete' id="insert" data-id='0'>@ResLabels.ClearLog</button></div>
    </div><!-- /.box-header -->

    <div class="box-body row">
        <div class="col-lg-12">
            <table class="table table-bordered table-striped table-condensed table-hover table-responsive" id="DataTable" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IpAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div><!-- /.box -->
<!-- Modal para ações de registro -->
<div class="modal fade" data-keyboard="false" data-backdrop="static" id="modal-actions">
    <div class="modal-dialog modal-lg">
        <div id="modal-actions-container"></div>
    </div>
</div>
<style>
    .scrollStyle {
        overflow-x: auto;
    }
</style>
<!-- Fim modal -->


@section scripts{
    @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Logs/Index.js"))
}
