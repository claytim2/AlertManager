@using Localization.Web
@using Web.Business
@model Model.DatabaseContext.Users


<div class="box">
    <div class="box-header">
        @if (ViewBag.IsAdmin)
        {
            <div class="box-title">
                <button class="btn btn-success btn-success table-edit" id="Upload" data-id="0">@ResLabels.NewRecord</button>
            </div>
        }
        
    </div><!-- /.box-header -->
    <div class="box-body">
        <div class="col-lg-12 table-responsive">
            <table class="table table-bordered table-striped table-condensed table-hover table-responsive" id="DataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Registration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Active)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Roles)
                        </th>
                        <th>
                            @Html.DisplayName(ResLabels.Actions)
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div><!-- /.box -->
<!-- Modal para ações de registro -->
<div class="modal fade" data-keyboard="false" data-backdrop="static" id="modal-actions">
    <div class="modal-dialog">
        <div id="modal-actions-container"></div>
    </div>
</div>
<!-- Fim modal -->

<!-- Modal para os Itens -->
<div class="modal fade" data-keyboard="false" data-backdrop="static" id="modal-items">
    <div class="modal-dialog modal-lg">
        <div id="modal-items-container"></div>
    </div>
</div>
<!-- Fim modal -->

@section scripts{
    @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Shared/DataTable.js"))
    @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Shared/EditShow.js"))
    @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Shared/DeleteShow.js"))
    @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Shared/View.js"))
}
