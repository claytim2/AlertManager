@using Localization.Web
@using Web.Business
@model Model.DatabaseContext.Workday

<div class="box">
    <div class="box-header">
        @if (ViewBag.IsAdmin)
        {
            <div class="box-title">
                <button class="btn btn-google btn-warning table-edit" id="Disableall" data-id="0">@ResLabels.DisableAll</button>
                <button class="btn btn-success btn-success table-edit" id="Upload" data-id="0">@ResLabels.Upload</button>
                <br />
                <br />
                <form id="uploadForm" enctype="multipart/form-data">
                    <input type="file" id="fileInput" name="file" />
                </form>
                <br />
            </div><!-- /.box-header -->
        }
        <div class="box-body">
            <div class="col-lg-12 table-responsive">
                <table class="table table-bordered table-striped table-condensed table-hover table-responsive" id="DataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.EmployeeID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Registration)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Notification)
                            </th>
                            <th>
                                @Html.DisplayName(ResLabels.Actions)
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div><!-- /.box -->
    <!-- Modal para ações de registro -->
    <div class="modal fade" data-keyboard="false" data-backdrop="static" id="modal-actions">
        <div class="modal-dialog">
            <div id="modal-actions-container"></div>
        </div>
    </div>
    <!-- Fim modal -->
    <!-- Modal para os Itens -->
    <div class="modal fade" data-keyboard="false" data-backdrop="static" id="modal-items">
        <div class="modal-dialog modal-lg">
            <div id="modal-items-container"></div>
        </div>
    </div>
    <!-- Fim modal -->

    @section scripts{
        <script>
        var ResLabels_SyncSuccess = "@ResLabels.SyncSuccess";
        var ResLabels_SyncFail = "@ResLabels.SyncFail";
        </script>
        @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Shared/DataTable.js"))
        @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Shared/EditShow.js"))
        @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Shared/DeleteShow.js"))
        @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Shared/View.js"))
        @Html.Raw(WebFunctions.JavascriptFileImport("~/Resources/scriptViews/Shared/Synchronize.js"))
    }
</div>
